<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="com.faforever.client.player.UsernameChangeController" fx:id="root">
    <Label styleClass="h3" text="%settings.account.username"/>
    <HBox>
        <children>
            <TextField fx:id="usernameField" maxWidth="270.0" prefHeight="30.0" prefWidth="270.0"/>
            <Button fx:id="changeButton" disable="true" mnemonicParsing="false" text="%settings.account.username.change"
                    onAction="#onUsernameChangeRequested"/>
        </children>
    </HBox>

</VBox>
